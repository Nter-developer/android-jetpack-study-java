<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/forefather_layout_padding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.coding.studywithjava.imageview.presentation.activity.ImageViewActivity">

    <ImageView
        android:id="@+id/image_view_image_view_top"
        android:background="@drawable/style_stroke_medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/linear_layout_default_button_container"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <LinearLayout
        android:id="@+id/linear_layout_default_button_container"
        app:layout_constraintTop_toBottomOf="@+id/image_view_image_view_top"
        app:layout_constraintBottom_toTopOf="@id/image_view_default_bottom"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_default_up"
            android:background="@color/study_gray"
            android:text="@string/up"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_medium"
            android:layout_margin="10dp"
            android:layout_width="@dimen/width_button_medium"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/button_default_light_on_off"
            android:background="@color/study_gray"
            android:text="@string/light_on_off"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_medium"
            android:layout_margin="10dp"
            android:layout_width="@dimen/width_button_medium"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/button_default_down"
            android:background="@color/study_gray"
            android:text="@string/down"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_medium"
            android:layout_margin="10dp"
            android:layout_width="@dimen/width_button_medium"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/image_view_default_bottom"
        android:background="@drawable/style_stroke_medium"
        app:layout_constraintTop_toBottomOf="@id/linear_layout_default_button_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>