<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/forefather_layout_padding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.coding.studywithjava.textview.presentation.activity.TextViewActivity">
    
    <EditText
        android:id="@+id/text_view_text_view_input"
        android:background="@drawable/style_stroke_medium"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text_view_text_view_string_length"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="400dp"/>

    <TextView
        android:id="@+id/text_view_text_view_string_length"
        android:gravity="end"
        android:textSize="@dimen/font_size_medium"
        android:layout_marginVertical="@dimen/margin_medium"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/text_view_text_view_input"
        app:layout_constraintBottom_toTopOf="@+id/linear_layout_text_view_button_container"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <LinearLayout
        android:id="@+id/linear_layout_text_view_button_container"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/text_view_text_view_string_length"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <Button
            android:id="@+id/button_text_view_send"
            android:text="@string/send"
            android:layout_width="@dimen/width_button_medium"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/button_text_view_close"
            android:text="@string/close"
            android:layout_width="@dimen/width_button_medium"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>